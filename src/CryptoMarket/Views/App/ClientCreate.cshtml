@*@model CryptoMarket.Models.Client*@
@model CryptoMarket.ViewModels.ClientViewModel
@using CryptoMarket.Enums

@{
    ViewBag.Title = "New Client";
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="container-fluid">
    <form method="post" asp-controller="App" asp-action="ClientCreate" class="form-horizontal">
        <div asp-validation-summary="ValidationSummary.ModelOnly"></div>

        <div class="form-group">
            <label asp-for="NickName" class="col-sm-2 control-label">NickName</label>
            <div class="col-sm-8">
                <input type="text" id="NickName" name="NickName" class="form-control" />
            </div>
            <span asp-validation-for="NickName"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientType" class="col-sm-2">ClientType :</label>
            <div class="col-sm-8">
                <select id="ClientType" name="ClientType" class="form-control">   
                    <option>customer</option>
                    <option>vendor</option>
                </select>
            </div>
            <span asp-validation-for="ClientType"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address1" class="col-sm-2">Address 1 </label>
            <div class="col-sm-8">
                <input type="text" id="Address1" name="address1" class="form-control" />
            </div>
            <span asp-validation-for="Address1"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address2" class="col-sm-2">Address 2 </label>
            <div class="col-sm-8">
                <input type="text" id="Address2" name="Address2" class="form-control" />
            </div>
            <span asp-validation-for="Address2"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address3" class="col-sm-2">Address 3 </label>
            <div class="col-sm-8">
                <input type="text" id="Address3" name="Address3" class="form-control" />
            </div>
            <span asp-validation-for="Address3"></span>
        </div>

        <div class="form-group">
            <label asp-for="Title" class="col-sm-2">Title</label>
            <div class="col-sm-8">
                <input type="text" id="Title" name="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2">FirstName</label>
            <div class="col-sm-8">
                <input type="text" id="FirstName" name="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="col-sm-2">LastName</label>
            <div class="col-sm-8">
                <input type="text" id="LastName" name="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="VendorName" class="col-sm-2">VendorName</label>
            <div class="col-sm-8">
                <input type="text" id="VendorName" name="VendorName" class="form-control" />
            </div>
            <span asp-validation-for="VendorName"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" />
            <input type="button" value="Cancel" />
        </div>
    </form>
</div>