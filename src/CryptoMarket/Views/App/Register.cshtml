@{
    ViewBag.Title = "Register";
}
<div>
    <div>
        <h4>Register</h4>
    </div>
   <div class="row">
       <div class="col-md-6 col-md-offset-3">
           <form method="post">
               <div class="form-group">
                   <label asp-for="FirstName">FirstName</label>
                   <input asp-for="FirstName" />
               </div>
               <div class="form-group">
                   <label asp-for="LastName">LastName</label>
                   <input asp-for="LastName" />
               </div>
               <div class="form-group">
                   <label asp-for="Country">Country</label>
                   <input asp-for="Country" />
               </div>
               <div class="form-group">
                   <label asp-for="Address1">Address 1</label>
                   <input asp-for="Address1" />
               </div>
               <div class="form-group">
                   <label asp-for="Address2">Address 2</label>
                   <input asp-for="Address2" />
               </div>
               <div class="form-group">
                   <label asp-for="Address3">Address 3</label>
                   <input asp-for="Address3" />
               </div>
               <div class="form-group">
                   <label asp-for="PostCode">Mail Code</label>
                   <input asp-for="PostCode" />
               </div>
               <div class="form-group">
                   <label asp-for="Email">Email</label>
                   <input asp-for="Email" />
               </div>
           </form>
       </div>
   </div>
</div>