@model CryptoMarket.ViewModels.RegisterViewModel
@using CryptoMarket.Enums

    @{
        ViewBag.Title = "Register";
    }
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
    <div>
        <h4>Quick Register</h4>
        <div class="container-fluid">
            <form method="post" asp-controller="Auth" asp-action="Register" class="form-horizontal">
                <div as-validation-summary="ValidationSummary.ModelOnly"></div>
                <div class="form-group">
                    <label for="Username" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" id="Username" name="Username" class="form-control" />
                    </div>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" id="Email" name="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" id="Password" name="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword" class="col-sm-2 control-label">ConfirmPassword</label>
                    <div class="col-sm-10">
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WebUserType" class="col-sm-2 control-label"></label>
                    <select asp-for="WebUserType" class="dropdown col-sm-2">
                        @foreach (Enums.WebUserType webUserType in Enum.GetValues(typeof(Enums.WebUserType)))
                        {
                            @if (!@webUserType.ToString().Contains("admin"))
                            {
                                <option>@webUserType.ToString()</option>
                            }
                        }
                    </select>                    
                    <span asp-validation-for="WebUserType"></span>
                </div>

                <div>
                    <input type="submit" value="Register" />
                </div>

            </form>
        </div>

    </div>