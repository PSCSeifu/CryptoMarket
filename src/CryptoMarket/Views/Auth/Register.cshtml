@model CryptoMarket.ViewModels.RegisterViewModel
    @{
        ViewBag.Title = "Register";
    }
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
    <div>
        <h4>Quick Register</h4>
        <div class="container-fluid">
            <form method="post" asp-controller ="Auth" asp-action ="Register" class="form-horizontal">
                <div as-validation-summary="ValidationSummary.ModelOnly"></div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" id="Email" name="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" id="Password" name="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password"></span>
                   </div>
                <div class="form-group">
                        <label for="ConfirmPassword" class="col-sm-2 control-label">ConfirmPassword</label>
                        <div class="col-sm-10">
                            <input type="text" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="Username"></span>
                    </div>
                <div>
                    <input type="submit" value="Register"/>
                </div>
               
            </form>
        </div>

    </div>